# Shared configuration for all bots
# Rename to shared.yaml and fill in your API keys

vendors:
  anthropic:
    config:
      anthropic_api_key: "sk-ant-api03-..."
    provides:
      - "claude-3-5-sonnet-20241022"
      - "claude-3-opus-20240229"
      - "claude-3-5-haiku-20241022"
  
